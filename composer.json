{
    "name": "platformsh/client",
    "description": "Platform.sh API client",
    "license": "MIT",
    "require": {
        "cocur/slugify": "^2.0 || ~1.0",
        "guzzlehttp/guzzle": "~5.3",
        "commerceguys/guzzle-oauth2-plugin": "~2.0",
        "guzzlehttp/cache-subscriber": "~0.1",
        "cweagans/composer-patches": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5"
    },
    "autoload": {
        "psr-4": {
            "Platformsh\\Client\\": "src"
        }
    },
    "autoload-dev": {
      "psr-4": {
        "Platformsh\\Client\\Tests\\": "tests"
      }
    },
    "authors": [
        {
            "name": "Patrick Dawkins"
        }
    ],
    "extra": {
        "patches": {
            "commerceguys/guzzle-oauth2-plugin": {
                "Make it possible to get the access token without triggering a refresh": "patches/commerceguys/guzzle-oauth2-plugin/get-access-token-no-refresh.patch",
                "Support a token save callback": "patches/commerceguys/guzzle-oauth2-plugin/token-save-callback.patch"
            }
        }
    }
}
